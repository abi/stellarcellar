@import 'normalize'

body
  font-size: 14px
  font-family: 'proxima-nova', 'Helvetica'
  margin: 0px 50px

/* Links */
a
  text-decoration: none
  color: #A60000

a:hover
  border-bottom: 1px solid #A60000
  color: #333

/* Headers */
h1
  margin-bottom: 50px

/* Forms */
.field
  margin-bottom: 10px

.field label
  float: left
  width: 100px

.field input
  width: 200px

.field #submit
  margin-top: 20px
  margin-left: 250px
  width: auto

/* User elements */
#navbar
  border-bottom: 1px solid black

#navbar h2
  width: auto
  display: inline-block

#navbar #user-nav
  float: right
  margin-top: 20px

#navbar #user-nav a
  display: inline-block
  margin: 0 10px

#navbar #user-nav a:last-child
  border-right: 0px
  margin-right: 0px

#navbar .divider
  display: inline-block
  border-left: 1px solid black
  padding: 0px

/* Logo */
h2.logo
  font-size: 18px
  font-weight: 100
  margin: 15px 0px 15px 0px

h2.logo a
  color: #A60000

h2.logo a:hover
  border-bottom: 0px
  color: #A60000

/* Login/sign up pages */
ul.error-msgs
  padding: 0px
  margin: 0px 0px 20px 0px

li.error-msg
  list-style-type: none
  border: 1px solid red
  background: #DDD
  padding: 5px
